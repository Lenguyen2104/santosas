<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../layout/header') %>
</head>
<body class="hold-transition sidebar-mini">
<div class="wrapper">
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
        </ul>
        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                    <i class="fas fa-expand-arrows-alt"></i>
                </a>
            </li>
        </ul>
    </nav>
    <!-- /.navbar -->
    <%- include('../../layout/sidebar') %>
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-12">
                        <% if(typeof message !=='undefined' ){ %>
                            <div class="alert alert-success">
                                <%= message %>
                            </div>
                        <% } %>
                        <div class="card card-primary mt-3">
                            <div class="card-header">
                                <h3 class="card-title">Chỉnh sửa Member <%=user.username %></h3>
                            </div>
                            <div class="card-body">
                                <form action="/admin/members/<%=user._id %>" method="POST" >
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="menu">Phone</label>
                                                    <input type="text" name="phone" value="<%=user.phone %>" class="form-control"  >
                                                </div>
                                                <div class="form-group">
                                                    <label for="menu">Username</label>
                                                    <input type="text" name="username" value="<%=user.username %>" class="form-control"  >
                                                </div>
                                                <div class="form-group">
                                                    <label for="menu">Pass Đăng Nhập</label>
                                                    <input type="text" name="password" value="" class="form-control"  >
                                                </div>
                                                <div class="form-group">
                                                    <label for="menu">Pass Rút Tiền</label>
                                                    <input type="text" name="password_withdraw" value="<%=user.password_withdraw %>" class="form-control"  >
                                                </div>
                                                <div class="form-group">
                                                    <label for="menu">Tiền</label>
                                                    <input type="number" name="balance" step="any" class="form-control"  value="<%=user.balance %>" >
                                                </div>
                                                <div class="form-group">
                                                    <label for="menu">Tên ngân hàng</label>
                                                    <input type="text" name="bank_id" class="form-control" value="<%=user.bank_id %>"  >
                                                </div>
                                                <div class="form-group">
                                                    <label for="menu">STK</label>
                                                    <input type="text" name="bank_number" class="form-control" value="<%=user.bank_number %>"  >
                                                </div>
                                                <div class="form-group">
                                                    <label for="menu">Tên chủ bank</label>
                                                    <input type="text" name="bank_user" class="form-control" value="<%=user.bank_user %>"  >
                                                </div>
                                                <div class="form-group">
                                                    <label for="menu">VIP</label>
                                                    <input type="text" name="vip" value="<%=user.vip %>" class="form-control"  >
                                                </div>
                                                <div class="form-group">
                                                    <label for="menu">Banned</label>
                                                    <select name="banned" class="form-control" >
                                                        <option value="<%=user.banned %>"><% if (user.banned === 0) { %>No<% } else { %>Banned<% } %></option>
                                                        <option value="0">No</option>
                                                        <option value="1">Banned</option>
                                                    </select>
                                                </div>
                                                <div class="form-group">
                                                    <label for="menu">Mở đóng cược</label>
                                                    <select name="enable_bet" class="form-control" >
                                                        <option value="<%=user.enable_bet %>"><%=user.enable_bet %></option>
                                                        <option value="true">Mở</option>
                                                        <option value="false">Đóng</option>
                                                    </select>
                                                </div>
                                                <div class="form-group">
                                                    <label for="menu">Coderef</label>
                                                    <input type="text" name="coderef" value="<%=user.coderef %>" class="form-control"  >
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- /.content-wrapper -->
    <footer class="main-footer">
        <div class="float-right d-none d-sm-block">
            <b>Version</b> 1.0
        </div>
        <strong>Copyright &copy; 2023 <a href="/">Admin</a>.</strong> All rights reserved.
    </footer>
</div>
<%- include('../../layout/footer') %>
<script>
$(document).on('click','.copy',function(){
  var group_id = $(this).attr('data-id');
  var url = window.location.host+'/room/'+group_id;
  var temp = $("<input>");
  $("body").append(temp);
  temp.val(url).select();
  document.execCommand("copy");
  temp.remove();
});
</script>
</body>
</html>
