<script>
$(document).on('click','.copy',function(){
  var group_id = $(this).attr('data-id');
  var url = window.location.host+'/room/'+group_id;
  var temp = $("<input>");
  $("body").append(temp);
  temp.val(url).select();
  document.execCommand("copy");
  temp.remove();
});
</script>
</body>
</html>
